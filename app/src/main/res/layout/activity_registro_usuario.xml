<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pqrs.sena.quejapp.registro_usuario"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/lyMarginBottom"
        android:paddingTop="@dimen/lyPaddingTop"
        android:layout_marginTop="@dimen/lyMarginTop"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="53dp"
                android:layout_height="45dp"
                android:id="@+id/imageView"
                android:layout_gravity="left|center_vertical"
                android:contentDescription="@string/imgLogoUsuario"
                android:src="@drawable/ic_user"
                android:layout_weight="0.18" />

            <EditText
                android:layout_width="@dimen/edTxtWidth"
                android:layout_height="@dimen/edTxtHeight"
                android:paddingBottom="@dimen/edTxtPaddingButton"
                android:paddingTop="@dimen/edTxtPaddingTop"
                android:layout_marginLeft="@dimen/edTxtMarginLeft"
                android:id="@+id/edt_nombre_completo"
                android:hint="@string/txtvwNombreCompleto"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="0.9" />

        </LinearLayout>

        <EditText
            android:layout_width="@dimen/edTxtWidth"
            android:layout_height="@dimen/edTxtHeight"
            android:paddingBottom="@dimen/edTxtPaddingButton"
            android:paddingTop="@dimen/edTxtPaddingTop"
            android:layout_marginLeft="@dimen/edTxtMarginLeft"
            android:id="@+id/edt_apellidos"
            android:hint="@string/txtvwApellidos"

            />

        <Spinner
            android:layout_width="@dimen/spWidth"
            android:layout_height="@dimen/spHeight"
            android:entries="@array/spTipoDocumento"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/spntipodocumento"
            >

        </Spinner>


        <EditText
            android:layout_width="@dimen/edTxtWidth"
            android:layout_height="@dimen/edTxtHeight"
            android:layout_gravity="left"
            android:paddingBottom="@dimen/edTxtPaddingButton"
            android:paddingTop="@dimen/edTxtPaddingTop"
            android:layout_marginLeft="@dimen/edTxtMarginLeft"
            android:id="@+id/edtnumero_documento"
            android:hint="@string/txtvwNumeroDocumento"/>
        <EditText
            android:layout_width="@dimen/edTxtWidth"
            android:layout_height="@dimen/edTxtHeight"
            android:paddingBottom="@dimen/edTxtPaddingButton"
            android:paddingTop="@dimen/edTxtPaddingTop"
            android:layout_marginLeft="@dimen/edTxtMarginLeft"
            android:id="@+id/edt_nombreusuario"
            android:hint="@string/txtvwNombreUsuario"
            />

        <EditText
            android:layout_width="@dimen/edTxtWidth"
            android:layout_height="@dimen/edTxtHeight"
            android:paddingBottom="@dimen/edTxtPaddingButton"
            android:paddingTop="@dimen/edTxtPaddingTop"
            android:layout_marginLeft="@dimen/edTxtMarginLeft"
            android:id="@+id/edt_contraseña"
            android:hint="@string/edtContraseña"
            android:inputType="textPassword"

            />


    </LinearLayout>
    <Button
        android:layout_width="@dimen/btnContinuarFormUnoWidth"
        android:layout_height="@dimen/btnContinuarFormUnoHeight"
        android:text="@string/btnRegistrarse"
        android:id="@+id/btnRegistrarse"
        android:onClick="salvar"/>
</LinearLayout>
